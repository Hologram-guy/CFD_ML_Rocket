FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0]; // m^2/s^2

internalField   uniform 1; // Start with some turbulence everywhere

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1; // Approx 1-5% intensity
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }
    atmosphere
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }
    rocket
    {
        // Standard wall function for k
        type            kqRWallFunction;
        value           uniform 0;
    }
    symmetry_planes
    {
        type            symmetry;
    }
}