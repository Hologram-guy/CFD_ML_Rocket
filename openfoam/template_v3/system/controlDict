/*--------------------------------*- C++ -*----------------------------------*\
  OpenFOAM: The Open Source CFD Toolbox
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}

application     rhoCentralFoam;
startFrom       startTime;
startTime       0;
stopAt          endTime;
endTime         0.01;      // Short time for supersonic development
deltaT          1e-6;
adjustTimeStep  yes;       // Critical for supersonic stability
maxCo           0.1;       // High-speed safety margin
writeControl    adjustableRunTime;
writeInterval   0.01;
purgeWrite      0;
writeFormat     ascii;
writePrecision  6;
runTimeModifiable true;

functions
{
    forces
    {
        type            forceCoeffs;
        libs            ("libforces.so");
        writeControl    writeTime;
        patches         ( rocket );
        p               p;
        U               U;
        rho             rho;       // Uses solved density
        rhoInf          1.225;   // Add this line back in even for compressible
        magUInf         500;
        lRef            1;
        Aref            0.785;
        liftDir         (0 1 0);
        dragDir         (0 0 -1);
        CofR            (0 0 0);
    }
}