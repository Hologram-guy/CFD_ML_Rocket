FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1;

vertices
(
    // Large "Wind Tunnel" Box
    // Width: 50 (-25 to 25)
    // Length: 80 (-20 to 60)
    
    // Bottom Square (Inlet side, Z = -20)
    (-25 -25 -100)  // 0
    ( 25 -25 -100)  // 1
    ( 25  25 -100)  // 2
    (-25  25 -100)  // 3
    // (-100 -100 -500)  // 0
    // ( 100 -100 -500)  // 1
    // ( 100  100 -500)  // 2
    // (-100  100 -500)  // 3

    // Top Square (Outlet side, Z = 60)
    (-25 -25  30)  // 4
    ( 25 -25  30)  // 5
    ( 25  25  30)  // 6
    (-25  25  30)  // 7
    // (-100 -100  50)  // 4
    // ( 100 -100  50)  // 5
    // ( 100  100  50)  // 6
    // (-100  100  50)  // 7
);

blocks
(
    // One big block
    // (X-cells  Y-cells  Z-cells)
    // Adjusted counts to keep cells roughly square-shaped (cubic).
    // 25x25 cells for width 50 = 2 units per cell.
    // 40 cells for length 80   = 2 units per cell.
    hex (0 1 2 3 4 5 6 7) (20 20 40) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    // Upstream (Z-minus)
    inlet
    {
        type patch;
        faces
        (
            (0 1 2 3) 
        );
    }

    // Downstream (Z-plus)
    outlet
    {
        type patch;
        faces
        (
            (4 5 6 7) 
        );
    }

    // Far-field walls
    atmosphere
    {
        type patch;
        faces
        (
            (0 1 5 4) // Front
            (1 2 6 5) // Right
            (2 3 7 6) // Back
            (3 0 4 7) // Left
        );
    }
);

mergePatchPairs
(
);

