FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;

    // --- RhoCentralFoam Specifics ---
    div(tauMC)      Gauss linear;
    div(phi,nut)    Gauss upwind;
    div(phi,e)      Gauss upwind;
    
    // --- TURBULENCE (These were missing!) ---
    div(phi,k)      bounded Gauss upwind;
    div(phi,omega)  bounded Gauss upwind;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
    reconstruct(rho) vanLeer;
    reconstruct(U)   vanLeerV;
    reconstruct(T)   vanLeer;
    reconstruct(e)   vanLeer;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave; 
}

