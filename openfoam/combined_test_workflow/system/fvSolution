FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}

solvers
{
    // --- For PotentialFoam ---
    Phi
    {
        solver          GAMG;
        tolerance       1e-7;
        relTol          0.01;
        smoother        GaussSeidel;
    }

    // --- For simpleFoam (Incompressible) ---
    p
    {
        solver          GAMG;
        tolerance       1e-6;
        relTol          0.01;
        smoother        GaussSeidel;
    }
    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-6;
        relTol          0.1;
    }
    "(k|omega)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-6;
        relTol          0.1;
    }

    // --- For rhoCentralFoam (Compressible) ---
    // It solves density, momentum, and energy directly
    "(rho|rhoU|rhoE)"
    {
        solver          diagonal; // Explicit solver (no matrix inversion)
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;
    
    // Relaxation factors help simpleFoam stay stable
    residualControl
    {
        p               1e-4;
        U               1e-4;
    }
}

PIMPLE
{
    // rhoCentralFoam doesn't strictly use PIMPLE controls but this is good to have
    nOuterCorrectors 1;
    nCorrectors     1;
    nNonOrthogonalCorrectors 0;
}

relaxationFactors
{
    fields
    {
        p               0.3;
    }
    equations
    {
        U               0.7;
        k               0.7;
        omega           0.7;
    }
}
