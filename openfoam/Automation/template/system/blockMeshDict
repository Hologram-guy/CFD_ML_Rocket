// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1;
vertices
(
    // Bottom Square (Mapped to Lower Z - now your outlet side for -Z flow)
    ( 0  0  {{ rocket.outlet_z }} )  // 0: Origin/Symmetry Corner
    ( {{ rocket.far_field }}  0  {{ rocket.outlet_z }} )  // 1: +X Corner
    ( {{ rocket.far_field }} {{ rocket.far_field }} {{ rocket.outlet_z }} )  // 2: +X +Y Corner
    ( 0 {{ rocket.far_field }} {{ rocket.outlet_z }} )  // 3: +Y Corner

    // Top Square (Mapped to Higher Z - now your inlet side for -Z flow)
    ( 0  0  {{ rocket.inlet_z }} )   // 4
    ( {{ rocket.far_field }}  0  {{ rocket.inlet_z }} )   // 5
    ( {{ rocket.far_field }} {{ rocket.far_field }} {{ rocket.inlet_z }} )   // 6
    ( 0 {{ rocket.far_field }} {{ rocket.inlet_z }} )   // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) 
    ( {{ rocket.cells_x }} {{ rocket.cells_y }} {{ rocket.cells_z }} ) 
    simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 1 2 3)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }

    // New Symmetry Planes sitting on the X=0 and Y=0 axes
    symmetry_planes
    {
        type symmetry;
        faces
        (
            (0 3 7 4) // Plane at X=0
            (0 4 5 1) // Plane at Y=0
        );
    }

    // Outer far-field walls
    atmosphere
    {
        type patch;
        faces
        (
            (1 2 6 5) // Right Wall (X=25)
            (2 3 7 6) // Back Wall  (Y=25)
        );
    }
);

mergePatchPairs
(
);

