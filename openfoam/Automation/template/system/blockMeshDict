    ( 0              {{ far_field }} {{ inlet_z }} )  // 3: +Y

    // Top Square (Outlet side)
    ( 0              0              {{ outlet_z }} )  // 4
    ( {{ far_field }} 0              {{ outlet_z }} )  // 5
    ( {{ far_field }} {{ far_field }} {{ outlet_z }} )  // 6
    ( 0              {{ far_field }} {{ outlet_z }} )  // 7
);

