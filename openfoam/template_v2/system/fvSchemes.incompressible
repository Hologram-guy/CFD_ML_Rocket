FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    // Steady state is best for simpleFoam
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
    grad(U)         Gauss linear; // Required for linearUpwind
}

divSchemes
{
    default         none;

    // --- REQUIRED FOR POTENTIALFOAM ---
    div(div(phi,U)) Gauss linear;

    // --- For simpleFoam ---
    // We use linearUpwind for accuracy, which requires grad(U) above
    div(phi,U)      bounded Gauss linearUpwind grad(U);
    
    // Turbulence variables usually prefer upwind for stability
    div(phi,k)      bounded Gauss upwind;
    div(phi,omega)  bounded Gauss upwind;
    div(phi,epsilon) bounded Gauss upwind;
    
    // Viscous stress terms
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave; 
}

// ************************************************************************* //